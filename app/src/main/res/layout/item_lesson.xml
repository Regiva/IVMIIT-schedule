<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="12dp">

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="8:30"
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_cabinet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_start"
            android:layout_centerHorizontal="true"
            tools:text="1307"
            style="@style/textStyle.darkGrey.bold.18"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/rl_info"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        tools:text="Язык Python и анализ данных Язык Python и анализ данных"
        style="@style/textStyle.darkGrey.bold.18"/>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/rl_info"
        android:layout_marginStart="24dp"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="4dp"
        tools:text="Практика"/>

    <TextView
        android:id="@+id/tv_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/tv_type"
        android:layout_marginStart="16dp"
        tools:text="Абрамский М. М."/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_type"
        android:layout_marginTop="8dp"
        android:background="@color/barvinock"/>

</RelativeLayout>